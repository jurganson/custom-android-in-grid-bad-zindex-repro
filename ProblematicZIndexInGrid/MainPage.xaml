<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:problematicZIndexInGrid="clr-namespace:ProblematicZIndexInGrid"
             x:Class="ProblematicZIndexInGrid.MainPage">

    <Grid 
	    RowDefinitions="Auto, *" 
	    ColumnDefinitions="*"
	    BackgroundColor="AliceBlue">
		
	    <HorizontalStackLayout 
			Grid.Row="0" 
			HorizontalOptions="Fill" 
			BackgroundColor="DarkOrange">
			
		    <Label 
			    Text="This is an example of a header alert"  
			    Padding="20" 
			    HorizontalOptions="Fill"/>

		</HorizontalStackLayout>
		
	    <problematicZIndexInGrid:Control 
		    Grid.Row="1" 
		    HorizontalOptions="Fill" 
		    VerticalOptions="Fill"/>
	</Grid>

</ContentPage>
